<!DOCTYPE html>
<html>
  <head>
    <title>Dynaform</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <% if Current.user %>
        Welcome <%= Current.user.email %>!
        <%= button_to "Logout", logout_url, method: :delete %>
      <% else %>
        <%= button_to "Login", login_url, method: :get %>
        <%= button_to "Sign Up", signup_url, method: :get %>
      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
